<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FontTextView">
        <attr name="tvFontName" format="string" />
    </declare-styleable>

    <declare-styleable name="LinkTextView">
        <attr name="tvLinkText" format="string" />
        <attr name="tvLinkTextColor" format="color" />
        <attr name="tvLinkTextUnderline" format="boolean" />
        <attr name="tvLinkType" format="integer">
            <flag name="none" value="0" />
            <flag name="web" value="1" />
            <flag name="hashtag" value="2" />
            <flag name="screenname" value="4" />
            <flag name="email" value="8" />
            <flag name="phone" value="16" />
            <flag name="all" value="31" />
        </attr>
    </declare-styleable>

</resources>
